{
    "compilerOptions": {
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "pretty": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es2017"
    },
    "include": [
        "src/*.ts"
    ]
}